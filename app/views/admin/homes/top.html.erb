<!-- app/views/public/trainer/owners/index.html.erb -->

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-4">飼い主一覧</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <table class="table table-hover border-top border-bottom mt-4" style="background-color: #fffaf0;">
        <thead>
          <tr>
            <th>ID</th>
            <th>飼い主名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @owners.each do |owner| %>
            <tr onclick="window.location='<%= admin_owner_path(owner) %>';" style="cursor:pointer;">
              <td class="align-middle"><%= owner.id %></td>
              <td class="align-middle"><%= owner.name %></td>
              <td class="align-middle"><%= owner.email %></td>
              <td class="align-middle"><% if owner.is_active %>
                  <span class="text-success"><strong>有効</strong></span>
                <% else %>
                  <span class="text-danger"><strong>退会</strong></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
