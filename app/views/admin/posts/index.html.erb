<style>
  /* マウスが重なったときのスタイル */
  .table-hover tr:hover {
    background-color: #f5f5f5;
  }

  /* クリック可能なことを示すカーソル */
  .table-hover tr:hover {
    cursor: pointer;
  }
</style>

<div class="container mt-5">
  <div class="row mb-4">
    <div class="col text-center">
      <h1><strong>お悩み相談一覧</strong></h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <table class="table table-hover border-top border-bottom mt-4" style="background-color: #fffaf0;">
        <thead>
          <tr>
            <th>投稿者</th>
            <th>カテゴリ</th>
            <th>内容</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr onclick="window.location='<%= admin_post_path(post) %>';">
              <td><%= link_to admin_owner_path(post.owner), class: "text-decoration-none" do %><%= post.owner.name %><% end %></td>
              <td><%= post.category.name %></td>
              <td><%= post.introduction.truncate(30, separator: /\s/) %></td>
              <td><%= post.advices.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
