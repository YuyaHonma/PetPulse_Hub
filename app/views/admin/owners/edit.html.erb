<div class = "container">
  <div class = "row">
    <div class = "col mt-3">
      <h3  class="mb-4" style="font-weight:bold; font-family: serif; font-size:30px;"><strong>"<%= @owner.name %>"さん会員登録編集</strong> </h3>
      <%= form_with model: @owner, url: admin_owner_path(@owner) do |f| %>
      <table class = "table table-borderless", style="background-color: #fffaf0;">
        <tr>
          <th class="align-middle">飼い主ID</th>
          <td class="align-middle"><%= @owner.id %></td>
        </tr>
        <tr>
          <th class="align-middle">名前</th>
          <td class="align-middle"><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th class="align-middle">フリガナ</th>
          <td class="align-middle"><%= f.text_field :name_kana %></td>
        </tr>
        <tr>
          <th class="align-middle">お住まい</th>
          <td class="align-middle" colspan="2"><%= f.text_field :address, style: "width: 500px;" %></td>
        </tr>
        <tr>
          <th class="align-middle">電話番号</th>
          <td class="align-middle"><%= f.text_field :telephone %></td>
        </tr>
        <tr>
          <th class="align-middle">メールアドレス</th>
          <td class="align-middle"><%= f.text_field :email %></td>
        </tr>
        <tr>
          <th class="align-middle">会員ステータス</th>
          <td class="align-middle">
            <span><%= f.radio_button :is_active, "true" %>有効</span>
            <span class="pl-3"><%= f.radio_button :is_active, "false" %>退会</span>
          </td>
        </tr>
        <tr>
          <td></td>
          <td class="pt-5">
            <%= f.submit "変更を保存", class: "btn btn-lg btn-success", style:"width: 150px" %>
          </td>
        </tr>
      </table>
        <% end %>
    </div>
  </div>
</div>