<!-- app/views/public/trainer/owners/index.html.erb -->

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center mb-4" style="font-weight:bold; font-family: serif;">ドッグトレーナー一覧</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <table class="table table-hover border-top border-bottom mt-4" style="background-color: #fffaf0;">
        <thead>
          <tr>
            <th>ID</th>
            <th>トレーナー名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @trainers.each do |trainer| %>
            <tr onclick="window.location='<%= admin_trainer_path(trainer) %>';" style="cursor:pointer;">
              <td class="align-middle"><%= trainer.id %></td>
              <td class="align-middle"><%= trainer.name %></td>
              <td class="align-middle"><%= trainer.email %></td>
              <td class="align-middle">
                <% if trainer.is_active %>
                  <span class="text-success"><strong>有効</strong></span>
                <% else %>
                  <span class="text-danger"><strong>退会</strong></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
