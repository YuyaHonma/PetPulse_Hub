<header id="header" style="display: flex; align-items: center;">
  <%= link_to admin_root_path do %>
    <h3 class="larger-text">PetPulse Hub</h3>
  <% end %>
  <h5 style="margin-left: 10px; margin-top: 10px;">日本最大級のオンラインドッグトレーニングサイト</h5>
  <% if admin_signed_in? %>
  <li>
    <%= link_to destroy_admin_session_path, method: :delete, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px;"  do %>
    <i class="fa-solid fa-right-from-bracket mr-2"></i>Log out
  <% end %>
  </li>
  <% else %>
  <li>
    <%= link_to new_admin_session_path, class: "btn btn-outline-light rounded-pill mr-2", :style => "font-family:'Times New Roman'; font-size:20px; margin-bottom: 20px;"  do %>
    <i class="fa-solid fa-arrow-right-to-bracket mr-2"></i> Log In
  <% end %>
  </li>
  <% end %>
</header>