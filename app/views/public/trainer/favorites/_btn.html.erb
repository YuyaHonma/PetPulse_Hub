<% if post.trainer_favorited_by?(current_trainer) %>
  <%= link_to trainer_post_favorites_path(post), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.trainer_favorites.count+post.owner_favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to trainer_post_favorites_path(post), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.trainer_favorites.count+post.owner_favorites.count %> いいね
  <% end %>
<% end %>