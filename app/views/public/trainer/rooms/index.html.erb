<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h4 class="mb-4" style="font-weight:bold;">届いたDM一覧</h4>
      <% if @rooms.any? %>
        <div class="list-group">
          <% @rooms.each do |room| %>
            <%= link_to "DM with #{room.owner.name}", trainer_room_messages_path(room), class: "list-group-item list-group-item-action" %>
          <% end %>
        </div>
      <% else %>
        <p>届いたDMはありません。</p>
      <% end %>
    </div>
  </div>
</div>
