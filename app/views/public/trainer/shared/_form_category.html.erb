<%= form_with model: category, url: trainer_categorys_path, method: :post, local: true do |f| %>
  <div class="form-row align-items-center mt-4">
    <div class="col-md-3 mb-2">
      <%= f.label :name, "お悩み追加", class: "text-md-right", style: "font-size: 22px; font-weight:bold; " %>
    </div>
    <div class="col-md-6 mb-2">
      <%= f.text_field :name, placeholder: 'トイレ', class: "form-control" %>
    </div>
    <div class="col-md-3 mb-2 pl-5">
      <button type="submit" class="btn1" style="width: 170px; height: 40px; border-radius: 12px; background-color: #28a745; color: #fff;">
        <div class="btn-icon">
            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
                <!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                <path d="M16.1 260.2c-22.6 12.9-20.5 47.3 3.6 57.3L160 376V479.3c0 18.1 14.6 32.7 32.7 32.7c9.7 0 18.9-4.3 25.1-11.8l62-74.3 123.9 51.6c18.9 7.9 40.8-4.5 43.9-24.7l64-416c1.9-12.1-3.4-24.3-13.5-31.2s-23.3-7.5-34-1.4l-448 256zm52.1 25.5L409.7 90.6 190.1 336l1.2 1L68.2 285.7zM403.3 425.4L236.7 355.9 450.8 116.6 403.3 425.4z"></path>
            </svg>
        </div>
        <span>作成</span>
      </button>
    </div>
  </div>
<% end %>
<style>
  .btn1 {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 50px;
    box-sizing: border-box;
    border-radius: 5px;
    background-color: #353535;
    text-align: center;
    text-decoration: none;
    overflow: hidden;
    transition: 1s all;
}


.btn1 svg {
    position: absolute;
    inset: 0;
    margin: auto;
    height: 20px;
    fill: #353535;
    transition: .5s all;
    opacity: 0;
}

.btn1 span {
    color: #353535;
    text-align: center;
    z-index: 1;
}

.btn1:hover span {
    animation: textAnime 1s linear forwards;
}

.btn1:hover svg {
    animation: iconAnime 1s 0.7s linear forwards;
}

@keyframes textAnime {
    0% {
        transform: scaleX(1);
    }

    50% {
        font-weight: bold;
        transform: scaleX(1.3);
        opacity: 1;
    }

    100% {
        transform: scaleX(0.3);
        opacity: 0;
    }

}

@keyframes iconAnime {
    0% {
        opacity: 1;
    }

    25% {
        transform: translate(-3px, 3px);
    }

    50% {
        transform: translate(3px, -3px);
    }

    75% {
        transform: translate(-3px, 3px);
    }

    100% {
        opacity: 1;
    }

}
</style>