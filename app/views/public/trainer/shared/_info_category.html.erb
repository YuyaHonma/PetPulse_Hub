<table class="table border-top border-bottom table-condensed mt-4" style="background-color: #fffaf0;">
  <thead class="thead-center">
    <tr>
      <th class="text-center" style="background-color: #ccc8c0; padding-right: 30px;">お悩み内容</th>
      <th class="text-center" style="background-color: #ccc8c0; "></th>
    </tr>
  </thead>
  <tbody>
    <% categorys.each do |category| %>
      <tr>
        <td class="text-center align-middle" style="padding-right: 30px;  font-weight:bold;"><%= category.name %></td>
        <td class="text-center align-middle" style="color:#A07B35; font-family: serif; font-weight:bold; display: flex; align-items: center;">
          <div>
            <%= link_to '<svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><path d="M410.3 231l11.3-11.3-33.9-33.9-62.1-62.1L291.7 89.8l-11.3 11.3-22.6 22.6L58.6 322.9c-10.4 10.4-18 23.3-22.2 37.4L1 480.7c-2.5 8.4-.2 17.5 6.1 23.7s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L387.7 253.7 410.3 231zM160 399.4l-9.1 22.7c-4 3.1-8.5 5.4-13.3 6.9L59.4 452l23-78.1c1.4-4.9 3.8-9.4 6.9-13.3l22.7-9.1v32c0 8.8 7.2 16 16 16h32zM362.7 18.7L348.3 33.2 325.7 55.8 314.3 67.1l33.9 33.9 62.1 62.1 33.9 33.9 11.3-11.3 22.6-22.6 14.5-14.5c25-25 25-65.5 0-90.5L453.3 18.7c-25-25-65.5-25-90.5 0zm-47.4 168l-144 144c-6.2 6.2-16.4 6.2-22.6 0s-6.2-16.4 0-22.6l144-144c6.2-6.2 16.4-6.2 22.6 0s6.2 16.4 0 22.6z"/></svg><span>編集</span>'.html_safe, edit_trainer_category_path(category.id), class: "btn btn2 btn-success btn-sm", style: "width: 120px; height: 40px; border-radius: 12px; line-height:30px; background-color: green;" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<style>
  .table {
    margin: 0 auto; /* テーブルを中央揃えにする */
  }
  
  .btn2 {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 50px;
    box-sizing: border-box;
    border-radius: 5px;
    background-color: #353535;
    text-align: center;
    text-decoration: none;
    overflow: hidden;
    transition: 1s all;
}


.btn2 svg {
    position: absolute;
    inset: 0;
    margin: auto;
    height: 20px;
    fill: #353535;
    transition: .5s all;
    opacity: 0;
}

.btn2 span {
    color: #353535;
    text-align: center;
    z-index: 1;
}

.btn2:hover span {
    animation: textAnime 1s linear forwards;
}

.btn2:hover svg {
    animation: iconAnime 1s 0.7s linear forwards;
}

@keyframes textAnime {
    0% {
        transform: scaleX(1);
    }

    50% {
        font-weight: bold;
        transform: scaleX(1.3);
        opacity: 1;
    }

    100% {
        transform: scaleX(0.3);
        opacity: 0;
    }

}

@keyframes iconAnime {
    0% {
        opacity: 1;
    }

    25% {
        transform: rotate(-50deg);
    }

    50% {
        transform: rotate(0deg);
    }

    75% {
        transform: rotate(-50deg);
    }

    100% {
        opacity: 1;
    }

}

.btn {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100px;
    height: 50px;
    box-sizing: border-box;
    border-radius: 5px;
    background-color: #ddd0b3;
    text-align: center;
    text-decoration: none;
    overflow: hidden;
    transition: 1s all;
}


.btn3 svg {
    position: absolute;
    inset: 0;
    margin: auto;
    height: 20px;
    fill: #353535;
    transition: .5s all;
    opacity: 0;
}

.btn3 span {
    color: #353535;
    text-align: center;
    z-index: 1;
}

.btn3:hover span {
    animation: textAnime 1s linear forwards;
}

.btn3:hover svg {
    animation: iconAnime 1s 0.7s linear forwards;
}

@keyframes textAnime {
    0% {
        transform: scaleX(1);
    }

    50% {
        font-weight: bold;
        transform: scaleX(1.3);
        opacity: 1;
    }

    100% {
        transform: scaleX(0.3);
        opacity: 0;
    }

}

@keyframes iconAnime {
    0% {
        opacity: 1;
    }

    25% {
        transform: translateX(-5px);
    }

    50% {
        transform: translateX(5px);
    }

    75% {
        transform: translateX(-5px);
    }

    100% {
        opacity: 1;
    }

}
</style>
