    <section class="area" id="area-1">
  <h1><strong>新着お悩み一覧</strong></h1>
  <div class="row justify-content-center">
    <div class="col-10">
      <% @posts.each_slice(3) do |slice| %>
        <div class="row">
          <% slice.each do |post| %>
            <div class="col-md-4 mb-4"> <!-- col-md-4 を追加 -->
              <%= link_to trainer_post_path(post) do %>
                <%= image_tag post.image, style: "width: 100%; height: auto;", alt: "投稿画像" %>
              <% end %>
              <p class="text-center"> <!-- 中央揃え -->
                <strong>投稿者:</strong>
                <%= post.owner.name %>
                <strong style="margin-left: 10px;">カテゴリー:</strong>
                <%= post.category.name %>
              </p>
              <% truncated_content = truncate(post.introduction, length: 30, separator: ' ') %>
              <% truncated_content.scan(/.{1,10}/).each do |line| %> <!-- 10文字ごとに改行 -->
                <p class="text-center" style="font-size: 18px;"><%= line %></p> <!-- 文字サイズを大きく -->
              <% end %>
            </div>
          <% end %>
          <% unless slice == @posts.last(3) %>
            <div class="col-md-4 mb-4"></div> <!-- スペースを作成 -->
            <div class="col-md-4 mb-4"></div> <!-- スペースを作成 -->
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <p class="text-center"><%= link_to "一覧を見る", trainer_posts_path %></p>
    </div>
  </div>
</section>

