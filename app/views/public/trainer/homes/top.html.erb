    <section class="area" id="area-1">
  <h1><strong>新着お悩み一覧</strong></h1>
  <div class="row justify-content-center">
    <div class="col-10">
      <% @posts.each_slice(4) do |slice| %>
        <div class="row">
          <% slice.each do |post| %>
            <div class="col-md-3 mb-4"> <!-- col-md-4 を追加 -->
              <%= link_to trainer_post_path(post) do %>
                <%= image_tag post.image, style: "width: 250px; height: 250px;", alt: "投稿画像" %>
              <% end %>
              <p class="text-left"> <!-- 中央揃え -->
                <strong>投稿者:</strong>
                <%= post.owner.name %></br>
                <strong>カテゴリー:</strong>
                <%= post.category.name %>
              </p>
              <% truncated_content = truncate(post.introduction, length: 30, separator: ' ') %>
              <% truncated_content.scan(/.{1,10}/).each do |line| %> <!-- 10文字ごとに改行 -->
                <p class="text-center" style="font-size: 18px;"><%= line %></p> <!-- 文字サイズを大きく -->
              <% end %>
            </div>
          <% end %>
          <% unless slice == @posts.last(3) %>
            <div class="col-md-4 mb-4"></div> <!-- スペースを作成 -->
            <div class="col-md-4 mb-4"></div> <!-- スペースを作成 -->
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <p class="text-center"><%= link_to "一覧を見る", trainer_posts_path %></p>
    </div>
  </div>
</section>

      <section class="area" id="area-2">
      <h1><strong>オススメトレーナー</strong></h1>
  <div class="row justify-content-center">
    <div class="col-12 mt-4">
      <% @trainers.each_slice(4) do |slice| %>
        <div class="row">
          <% slice.each do |trainer| %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
              <div class="card">
                <%= link_to trainer_trainer_path(trainer) do %>
                  <% if trainer.image.attached? %>
                    <%= image_tag trainer.image, class: "card-img-top", alt: "トレーナー画像" %>
                  <% else %>
                    <%= image_tag 'no_image.jpg', class: "card-img-top", alt: "デフォルト画像" %>
                  <% end %>
                <% end %>
                <div class="card-body">
                  <h5 class="card-title text-center"><strong><%= "#{trainer.name} トレーナー" %></strong></h5>
                  <% if trainer.message.present? %>
                    <% truncated_message = truncate(trainer.message, length: 30, separator: ' ') %>
                    <% if truncated_message.present? %>
                      <% truncated_message.scan(/.{1,10}/).each do |line| %>
                        <p class="card-text" style="font-size: 14px; line-height: 1.2;"><%= line %></p>
                      <% end %>
                    <% end %>
                  <% end %>
                  <%= link_to "詳しく見る", trainer_trainer_path(trainer), class: "btn btn-primary btn-sm btn-block rounded-pill mt-3" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="text-center"> <!-- 中央揃え -->
    <a href="<%= trainer_trainers_path %>" class="btn btn-success mt-3">トレーナー一覧を見る</a> <!-- 幅や高さはBootstrapのクラスで調整 -->
  </div>
