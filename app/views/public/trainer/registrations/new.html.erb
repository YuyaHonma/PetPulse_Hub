<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h2 class="text-center mb-4" style="font-weight:bold; color:#A07B35; font-family: serif;">新規会員登録</h2>
      
      <div style="padding: 15px; margin-bottom: 10px; border: 5px double #A07B35; background-color: #fffaf0;">
      <%= form_with(model: resource, url: registration_path(resource_name)) do |f| %>
      <%= render "public/owner/shared/error_messages", resource: resource %>
      <table>
        <tbody>
          <tr>
            <td class="p-1">名前</td>
            <td>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
            </td>
            </tr>
            <tr>
              <td class="p-1">フリガナ</td>
              <td>
               <%= f.text_field :name_kana, autofocus: true, autocomplete: "name_kana" %>
              </td>
            </tr>
            <tr>
              <td class="p-1"><%= f.label :email, "メールアドレス" %></td>
              <td class="p-1"><%= f.email_field :email, autocomplete: "email" %></td>          
            </tr>
            <tr>
              <td class="p-1"><%= f.label :address, "住所" %></td>
              <td colspan="3">              
            <%= f.text_field :address, size:"50", autofocus: true, autocomplete: "address" %>
              </td>
            </tr>
            <tr>
              <td class="p-1"><%= f.label :telephone, "電話番号(ハイフンなし)" %></td>
              <td>
              <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone" %>
              </td>          
            </tr>
            <tr>
              <td>
              <%= f.label :password, "パスワード" %>
              <% if @minimum_password_length %>                
              <em>(<%= @minimum_password_length %> 文字以上)</em>
              <% end %>
              </td>
              <td>
               <%= f.password_field :password, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr>
              <td class="p-1"><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
              <td>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </td>
            </tr>
            <tr>
                <td colspan="4"></td>
                <td class="p-2"><%= f.submit "新規登録", class:"btn btn-success btn-lg" %></td>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>

      <div class="mt-4 text-center">
        <%= link_to "ログイン画面へ", new_trainer_session_path, class: "btn btn-primary btn-lg mr-3", style: "margin-top: 30px;" %>
      </div>
    <div style="margin-bottom: 50px;"></div>
  </div>
</div>
