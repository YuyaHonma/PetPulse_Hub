<div class="container mt-5">
  <div class="row mb-4">
    <div class="col text-center">
      <h1><strong>お悩み相談一覧</strong></h1>
    </div>
  </div>
  <div class="row">
    <% @posts.each_slice(8) do |slice| %>
      <div class="row mb-4">
        <% slice.compact.each do |post| %>
          <div class="col-md-3 mb-4"> <!-- カラムの幅を調整 -->
            <div class="card h-100"> <!-- カードの高さを均等にするために h-100 を追加 -->
              <div class="post-image">
                <%= link_to trainer_post_path(post) do %>
                  <%= image_tag post.image, class: "img-thumbnail", style: "max-width: 100%; height: auto;" if post.image.attached? %>
                  <div class="overlay">
                    <i class="fas fa-search-plus fa-3x"></i>
                  </div>
                <% end %>
              </div>
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to trainer_owner_path(post.owner) do %>
                    <%= post.owner.name %>
                  <% end %>
                </h5>
                <p class="card-text">
                  <%= post.category.name %>
                </p>
                <p class="card-text">
                  <% truncated_introduction = post.introduction.gsub('<br>', ' ').truncate(30, separator: /\s/) %>
                  <%= truncated_introduction.html_safe %>
                </p>
                <p class="card-text">
                  コメント数: <%= post.advices.count %>
                </p>
                <p id="favorite_btn_<%= post.id %>", class="card-text">
                  <%= render "public/trainer/favorites/btn", post: post %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
