

<div class="container mt-4">
  <div class="row">
    <div class="col-9 mt-4 mx-auto">
      <h4 class="mb-4" style="font-weight:bold;"><i class="fa-solid fa-bone"></i> ペット情報の編集 <i class="fa-solid fa-bone"></i></h4>
      <%= form_with model: @pet, url: owner_pet_path(@pet), method: :patch do |f| %>
        <div class="form-group text-left">
          <strong><%= f.label :"ワンちゃんのお写真" %></strong>
          <div class="custom-file">
            <%= f.file_field :image, accept: "image/*", class: "custom-file-input", id: "customFile" %>
            <label class="custom-file-label" for="customFile">ファイルを選択してください</label>
          </div>
        </div>
        <div class="form-group text-left">
          <strong><%= f.label :"ワンちゃんのお名前" %></strong>
          <%= f.text_field :pet_name, placeholder: "山田　太郎", class: "form-control" %>
        </div>
        <div class="form-group text-left">
          <strong><%= f.label :"読み方(フリガナ)" %></strong>
          <%= f.text_field :pet_name_kana, placeholder: "ヤマダ　タロウ", class: "form-control" %>
        </div>
        <div class="form-group text-left">
          <strong><%= f.label :"性別" %></strong>
          <%= f.select :gender, Pet.genders.keys.map { |gender| [gender, gender] }, { prompt: "性別を選択してください" }, class: "form-control" %>
        </div>
        <div class="form-group text-left">
          <strong><%= f.label :"犬種" %></strong>
          <%= f.select :dog_breed, Pet.dog_breeds.keys.map { |breed| [breed, breed] }, { prompt: "犬種を選択してください" }, class: "form-control" %>
        </div>
        <div class="form-group text-left">
          <strong><%= f.label :"ワンちゃんの誕生日" %></strong>
          <%= f.date_field :dog_birthday, class: "form-control" %>
        </div>
        <div class="mt-4 text-center">
          <%= f.submit "変更を更新する", class: "btn btn-primary btn-lg mt-4", style: "width: 300px;" %>
        </div>
      <% end %>
      <div class="row mt-4">
          <div class="col-12">&nbsp;</div>
        </div>
    </div>
  </div>
</div>
