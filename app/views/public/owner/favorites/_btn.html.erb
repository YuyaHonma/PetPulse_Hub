<% if post.owner_favorited_by?(current_owner) %>
  <%= link_to owner_post_favorites_path(post), method: :delete, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= post.owner_favorites.count+post.trainer_favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to owner_post_favorites_path(post), method: :post, remote: true do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= post.owner_favorites.count+post.trainer_favorites.count %> いいね
  <% end %>
<% end %>