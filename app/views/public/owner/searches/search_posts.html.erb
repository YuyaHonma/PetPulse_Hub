<div class="container mt-5">
  <div class="row mb-4">
    <div class="col text-center">
      <h1 style="font-weight:bold; font-family: serif;"><strong>検索結果</strong></h1>
      <h4>(全<%= @records.count %>件)</h4>
      <% if @records.empty? %>
        <div class="text-center" style="margin:30px;">
          <p style="color:red;">該当するお悩みはありません</p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @records.each do |post| %>
      <div class="col-md-3"> <!-- カラムの幅を調整 -->
        <div class="card">
          <div class="post-image">
            <%= link_to owner_post_path(post) do %>
              <%= image_tag post.image, class: "img-thumbnail" if post.image.attached? %>
              <div class="overlay">
                <i class="fas fa-search-plus fa-3x"></i>
              </div>
            <% end %>
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to owner_my_page_path(post.owner) do %>
                <%= post.owner.name %>
              <% end %>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">
              <%= post.title %>
            </h6>
            <p class="card-text">
              <strong>お悩み内容: </strong><%= post.category.name %>
            </p>
            <p class="card-text">
              <strong>相談内容: </strong></br>
              <% truncated_introduction = post.introduction.truncate(30, separator: /\s/) %>
              <%= truncated_introduction %>
            </p>
            <p class="card-text">
              <strong>トレーナー回答: </strong><%= post.advices.count %>件
            </p>
            <p id="favorite_btn_<%= post.id %>", class="card-text">
              <%= render "public/owner/favorites/btn", post: post %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
