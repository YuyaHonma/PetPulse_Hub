<div class="col-md-8 mt-4 mx-auto text-center">
  <h4 class="mb-4 mt-4" style="font-weight:bold;"><strong><%= title %></strong></h4> <!-- タイトルを動的に表示 -->
  <%= form_with model: @pet, url: owner_pets_path, method: :post do |f| %>
    <div class="form-group text-left">
      <strong><%= f.label :"ワンちゃんのお写真" %></strong>
      <div class="custom-file">
        <%= f.file_field :image, accept: "image/*", class: "custom-file-input", id: "customFile" %>
        <label class="custom-file-label" for="customFile">ファイルを選択してください</label>
      </div>
    </div>
    <div class="form-group text-left">
      <strong><%= f.label :"ワンちゃんのお名前" %></strong>
      <%= f.text_field :pet_name, placeholder: "山田　太郎", class: "form-control" %>
    </div>
    <div class="form-group text-left">
      <strong><%= f.label :"読み方(フリガナ)" %></strong>
      <%= f.text_field :pet_name_kana, placeholder: "ヤマダ　タロウ", class: "form-control" %>
    </div>
    <div class="form-group text-left">
      <strong><%= f.label :"性別" %></strong>
      <%= f.select :gender, Pet.genders.keys.map { |gender| [gender, gender] }, { prompt: "性別を選択してください" }, class: "form-control" %>
    </div>
    <div class="form-group text-left">
      <strong><%= f.label :"犬種" %></strong>
      <%= f.select :dog_breed, Pet.dog_breeds.keys.map { |breed| [breed, breed] }, { prompt: "犬種を選択してください" }, class: "form-control" %>
    </div>
    <div class="form-group text-left">
      <strong><%= f.label :"ワンちゃんの誕生日" %></strong>
      <%= f.date_field :dog_birthday, class: "form-control" %>
    </div>
    <% if @new_registration %>
      <div class="d-flex justify-content-center mt-4" style="clear: both;">
        <%= f.submit "ペット情報を追加する", class: "btn btn-orange", style: "width: 250px; height: 50px; float: left; margin-top: 20px; margin-bottom: 40px;" %>
        <div class="mt-3"></div> <!-- ボタンの下に余白を追加 -->
      </div>
    <% else %>
      <div class="mt-4" style="clear: both;">
        <%= f.submit "ペット情報を登録する", class: "btn btn-success", style: "width: 250px; height: 50px; float: left; margin-top: 20px; margin-bottom: 40px;" %>
        <div class="mt-3"></div> <!-- ボタンの下に余白を追加 -->
        <%= link_to "マイページに戻る", owner_my_page_path, class: "btn btn-danger d-flex align-items-center justify-content-center", style: "width: 250px; height: 50px; float: right; margin-top: 20px; margin-bottom: 40px;" %>
      </div>
    <% end %>
  <% end %>
</div>
