<div class="container mt-5">
  <div class="row mb-4">
    <div class="col text-center">
      <h1><strong>お悩み相談一覧</strong></h1>
    </div>
  </div>
  <div class="row">
    <% @posts.each_slice(4) do |slice| %>
      <div class="row mb-4">
        <% slice.compact.each do |post| %>
          <div class="col-md-3 mb-4"> <!-- カラムの幅を調整 -->
            <div class="card">
              <div class="post-image">
                <%= link_to owner_post_path(post) do %>
                  <%= image_tag post.image, class: "img-thumbnail" if post.image.attached? %>
                  <div class="overlay">
                    <i class="fas fa-search-plus fa-3x"></i>
                  </div>
                <% end %>
              </div>
              <div class="card-body">
                <h5 class="card-title">
                  <%= link_to owner_my_page_path(post.owner) do %>
                    <%= post.owner.name %>
                  <% end %>
                </h5>
                <h6 class="card-subtitle mb-2 text-muted">
                  <%= post.title %>
                </h6>
                <p class="card-text">
                  <strong>お悩み内容: </strong><%= post.category.name %>
                </p>
                <p class="card-text">
                  <strong>相談内容: </strong></br>
                  <% truncated_introduction = post.introduction.truncate(30, separator: /\s/) %>
                  <%= truncated_introduction %>
                </p>
                <p class="card-text">
                  <strong>トレーナー回答: </strong><%= post.advices.count %>件
                </p>
                <p id="favorite_btn_<%= post.id %>", class="card-text">
                  <%= render "public/owner/favorites/btn", post: post %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<!-- ページネーション -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <%= paginate @posts, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>
</div>
